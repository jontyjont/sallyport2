<h1>Blurbs</h1>

<table class="table">
<thead>
<tr>
<th>Name</th><th>Category</th><th>Content</th>
</tr>
</thead>
<tbody>
 <% @blurbs.each do |blurb| %>
 	<tr>
 		<td><%= link_to blurb.name.split(" ").join("<br/>").html_safe, edit_admin_blurb_path(blurb), :class => "btn btn-inverse btn-sm", :style =>"width:80px;" %></td>
 		<td><%= blurb.cat %></td>
 		<td><%= blurb.content.truncate 100 %></td>
 	</tr>

 <% end %>
</tbody>

</table>